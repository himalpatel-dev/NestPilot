{
    "info": {
        "_postman_id": "society-backend-collection",
        "name": "Society Management API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Request OTP",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"mobile\": \"9999999999\", \"purpose\": \"LOGIN\"}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{url}}/api/auth/request-otp",
                            "host": [
                                "{{url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "request-otp"
                            ]
                        }
                    }
                },
                {
                    "name": "Verify OTP",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"mobile\": \"9999999999\", \"otp\": \"123456\"}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{url}}/api/auth/verify-otp",
                            "host": [
                                "{{url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "verify-otp"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Society",
            "item": [
                {
                    "name": "Get Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{url}}/api/society",
                            "host": [
                                "{{url}}"
                            ],
                            "path": [
                                "api",
                                "society"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "url",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ]
}